<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleDockerUI.App.Views.DockerContainerItemDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="名称:" FontSize="Medium" />
        <Label Text="{Binding Item.Name}" FontSize="Small"/>
        <Label Text="镜像:" FontSize="Medium" />
        <Label Text="{Binding Item.Image}" FontSize="Small"/>
        <Label Text="命令:" FontSize="Medium" />
        <Label Text="{Binding Item.Command}" FontSize="Small"/>
        <Label Text="端口:" FontSize="Medium" />
        <Label Text="{Binding Item.Port}" FontSize="Small"/>
        <Label Text="状态:" FontSize="Medium" />
        <Label Text="{Binding Item.Status}" FontSize="Small"/>
        <Label Text="创建时间:" FontSize="Medium" />
        <Label Text="{Binding Item.Created}" FontSize="Small"/>
    </StackLayout>
</ContentPage>