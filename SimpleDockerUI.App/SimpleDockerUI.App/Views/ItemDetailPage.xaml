<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleDockerUI.App.Views.ItemDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="名称:" FontSize="Medium" />
        <Label Text="{Binding Item.Name}" FontSize="Small"/>
        <Label Text="描述:" FontSize="Medium" />
        <Label Text="{Binding Item.Description}" FontSize="Small"/>
        <Label Text="站点:" FontSize="Medium" />
        <Label Text="{Binding Item.Url}" FontSize="Small"/>
    </StackLayout>
</ContentPage>